@model ProjetFrancois.Models.user

@{
    ViewBag.Title = "Edit";
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f7f7;
        padding: 20px;
    }

    h2, h4 {
        text-align: center;
        color: #333;
    }

    .form-horizontal {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 700px;
        margin: 20px auto;
    }

    .form-group {
        margin-bottom: 15px;
        display: flex;
        align-items: center;
    }

    .control-label {
        color: #5D5D5D;
        font-size: 16px;
        padding: 10px 0;
        text-align: right;
        flex: 1;
        margin-right: 10px;
    }

    .col-md-10 {
        flex: 3;
    }

    .form-control {
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
        padding: 8px;
        width: 100%;
        transition: border-color 0.2s ease-in;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: none;
    }

    .text-danger {
        color: #d9534f;
        font-size: 14px;
    }

    .btn-default {
        background-color: #007bff;
        color: #ffffff;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
        transition: background-color 0.2s ease-in;
    }

    .btn-default:hover {
        background-color: #0056b3;
    }

    .col-md-offset-2 {
        margin-left: 16.6667%;
    }

    a {
        color: #007bff;
        display: block;
        text-align: center;
        margin-top: 20px;
    }

    a:hover {
        text-decoration: underline;
    }

   
</style>

<h2>Edit</h2>


