@model IEnumerable<ProjetFrancois.Models.produit>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Commerce Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl7/1L_dstPt3HV5HzF6Gvk/e3s4Wz6iJgD/+ub2oU" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWTNAxipY" crossorigin="anonymous">
    <style>
        .products-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-evenly; /* This ensures even spacing */
            align-items: stretch; /* This ensures that all items have equal height */
            gap: 20px; /* Adjust the space between products */
        }

        .product-item {
            display: flex;
            flex-direction: column;
            justify-content: space-between; /* This will distribute space vertically inside the item */
            width: calc(33.333% - 20px); /* For 3 columns layout */
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 5px; /* Slightly rounded corners for aesthetics */
            overflow: hidden; /* Ensures content does not overflow the item */
            background: #fff; /* Background color for the product item */
            transition: transform .3s ease-in-out, box-shadow .3s ease-in-out;
        }

        .product-item:hover {
            transform: scale(1.03); /* Slight increase in size on hover for interaction */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); /* Shadow for depth */
        }

        .product-img-top {
            width: 80%; /* Image takes full width of item */
            height: auto; /* Adjust height automatically */
            margin-bottom: 1rem;
            align-items: center
        }

        .product-title {
            font-size: 1.25rem;
            font-weight: bold;
            text-align: center; /* Center align the title */
            margin: 0.5rem;
        }

        .product-price {
            font-size: 1.1rem;
            color: #555; /* Subtle text color */
            text-align: center; /* Center align the price */
            margin-bottom: 1rem;
        }

        .product-link {
            text-decoration: none;
            color: #fff;
            background-color: #007bff; /* Bootstrap primary color */
            border-color: #007bff;
            padding: 0.375rem 0.75rem;
            text-align: center;
            border-radius: 4px; /* Match Bootstrap's button border-radius */
            margin: 1rem; /* Space around the button */
            transition: all .2s ease-in-out;
        }

        .product-link:hover {
            background-color: #0056b3; /* Darker shade on hover */
            border-color: #0056b3;
        }
        header {
            background-color: #007bff; /* Primary color for consistency */
            padding: 10px 20px;
            text-align: center;
            color: white;
            font-family: Arial, sans-serif;
        }

            header p {
                display: inline-block; /* Aligns links in a line when space permits */
                margin: 0 10px; /* Provides spacing around links */
            }


       
    </style>
</head>
<header>
    <p>
        @Html.ActionLink("Panier", "Index", "paniers")
    </p>
    <p>
        @Html.ActionLink("Deconnexion", "Login", "users")
    </p>
</header>
<body>
    <div class="container-fluid py-4">
        <!-- Added padding for the container -->
        <div class="products-container">
            @foreach (var item in Model)
            {
                <div class="product-item">
                    <img src="@item.image" class="product-img-top" alt="@item.Categorie.Name">
                    <h5 class="product-title">@item.Categorie.Name</h5>
                    <p class="product-price">@item.prix$</p>
                    <form method="post" action="@Url.Action("Ajouterpanier")">
                        <input type="hidden" name="id" value="@item.idproduit" />
                        <button type="submit">Ajouter panier</button>
                    </form>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/" crossorigin="anonymous"></script>
</body>
</html>
